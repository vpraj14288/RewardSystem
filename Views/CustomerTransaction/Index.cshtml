@model dynamic

@{
    ViewData["Title"] = "Customer Transaction";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Customer Transactions </h1>

    <div class="col mb-3">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add Employee</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Transaction Code</th>
                <th scope="col">Transaction Datetime</th>
                <th scope="col">Transaction Amount</th>
                <th scope="col">Transaction Reward</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.CustomerName
                    </td>
                    <td width="20%">
                        @item.TransactionCode
                    </td>
                    <td width="25%">
                        @item.TransactionDatetime
                    </td>
                    <td width="20%">
                        @item.TransactionAmount
                    </td>
                    <td width="20%">
                        @item.TransactionReward
                    </td>                    
                </tr>
            }
        </tbody>
    </table>
</div>
